<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop in Style</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        /* Custom styles go here */
        .product-card {
            border: 1px solid #dee2e6;
            border-radius: 15px;
            transition: all 0.3s ease;
            margin-bottom: 30px;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            }

            .product-card img {
                border-top-left-radius: 15px;
                border-top-right-radius: 15px;
                height: 250px;
                object-fit: cover;
            }

            .product-card .card-body {
                padding: 1.5rem;
            }

            .product-card h5 {
                font-size: 1.25rem;
                font-weight: bold;
                color: #343a40;
            }

            .product-card p {
                font-size: 1rem;
                color: #6c757d;
            }

            .product-card .card-footer {
                background-color: transparent;
                border-top: none;
            }
    </style>
</head>
<body>

    <header class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Shop in Style</h1>
                <p class="lead fw-normal text-white-50 mb-0">With this shop homepage template</p>
            </div>
        </div>
    </header>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-3">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-2">
                    <form asp-action="Index" method="get">
                        <div class="input-group">
                            <input name="term" class="form-control" placeholder="Search by name" />
                            <button type="submit" class="btn btn-info">Search</button>
                        </div>
                    </form>
                </div>

                <div class="col-md-5">
                    <form asp-controller="Home" asp-action="FilterByCategory" method="get">
                        <div class="input-group">
                            <select class="form-control" id="category" name="categoryId">
                                <option value="">Categories</option>
                                @foreach (var category in ViewBag.TumKategoriler)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Filter by Category</button>
                                <a href="#" class="btn btn-danger" onclick="removeFilter()">Clear Category Filter</a>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="col-md-5">
                    <form asp-controller="Home" asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="number" id="minPrice" name="minPrice" class="form-control" placeholder="Min Price" />
                            <input type="number" id="maxPrice" name="maxPrice" class="form-control" placeholder="Max Price" />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Filter by Price</button>
                                <a href="#" class="btn btn-danger" onclick="removePriceFilter()">Clear Price Filter</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center mt-5">
                @foreach (var product in Model)
                {
                    <div class="col mb-4">
                        <div class="card product-card h-100">
                            <img class="card-img-top" src="@product.ImagePath" alt="Product Image" />
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@product.Name</h5>
                                    <p class="card-text">$@product.Price</p>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <form asp-controller="Cart" asp-action="AddProductToCart" method="post">
                                        <input type="hidden" name="userName" value="@User.Identity.Name" />
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-outline-dark mt-auto">Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div> <!-- Close the row for cards -->
        </div> <!-- Close the container -->
    </section> <!-- Close the section -->
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Script -->
    <script>
        function removeFilter() {
            document.getElementById("category").value = 0;
            document.forms[1].submit();
        }
        function removePriceFilter() {
            document.getElementById("minPrice").value = "";
            document.getElementById("maxPrice").value = "";
            document.forms[1].submit();
        }
    </script>
</body>
</html>
