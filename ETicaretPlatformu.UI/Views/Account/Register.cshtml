@{
    Layout = null;
}

@model RegisterDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="~/sb-admin-2/css/styles.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-4K2QLKc0nfhj9bS/LcZ5E28FLQvrn+DmeETEdXKZTrQoVTufIATFYbU+ovnX9KtZfjfS+hRX3GjEudcM2N44aA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f8f9fc;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-card {
            width: 400px;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h3 {
                font-weight: 700;
                color: #1488e1;
            }

        .form-floating {
            position: relative;
            margin-bottom: 20px;
        }

            .form-floating input {
                width: 100%;
                padding: 12px 20px;
                font-size: 16px;
                border: 1px solid #ced4da;
                border-radius: 5px;
                background-color: #f8f9fc;
                transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
            }

                .form-floating input:focus {
                    border-color: #74c0fc;
                    outline: 0;
                    box-shadow: 0 0 0 0.25rem rgba(118, 175, 233, 0.25);
                }

            .form-floating label {
                position: absolute;
                top: 0;
                left: 0;
                padding: 10px 20px;
                font-size: 16px;
                color: #495057;
                pointer-events: none;
                transition: transform 0.15s ease-in-out, opacity 0.15s ease-in-out;
            }

            .form-floating input::placeholder {
                color: #6c757d;
            }

            .form-floating input:focus ~ label,
            .form-floating input:not(:placeholder-shown) ~ label {
                transform: translateY(-30px);
                opacity: 0.5;
                font-size: 12px;
            }

        .login-btn {
            width: 100%;
            padding: 14px 20px;
            font-size: 16px;
            font-weight: 500;
            color: #fff;
            background-color: #1488e1;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .login-btn:hover {
                background-color: #0b6ed6;
            }

        .small {
            font-size: 14px;
        }

        .register-link {
            color: #1488e1;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .register-link:hover {
                color: #0b6ed6;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h3>Create Account</h3>
            </div>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="form-floating">
                    <input asp-for="FirstName" class="form-control" id="firstName" placeholder=" " />
                    <label for="firstName"><i class="fas fa-user" style="color: #74C0FC;"></i> First Name</label>
                </div>
                <div class="form-floating">
                    <input asp-for="LastName" class="form-control" id="lastName" placeholder=" " />
                    <label for="lastName"><i class="fas fa-user" style="color: #74C0FC;"></i> Last Name</label>
                </div>
                <div class="form-floating">
                    <input asp-for="UserName" class="form-control" id="userName" placeholder=" " />
                    <label for="userName"><i class="fas fa-user" style="color: #74C0FC;"></i> User Name</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="email" placeholder=" " />
                    <label for="email"><i class="fas fa-envelope" style="color: #74C0FC;"></i> Email Address</label>
                </div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder=" " />
                    <label for="password"><i class="fas fa-lock" style="color: #74C0FC;"></i> Password</label>
                </div>
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder=" " />
                    <label for="confirmPassword"><i class="fas fa-lock" style="color: #74C0FC;"></i> Confirm Password</label>
                </div>
                <button type="submit" class="login-btn">Create Account</button>
            </form>
            <div class="card-footer text-center py-3">
                <div class="small">Already have an account? <a asp-controller="Account" asp-action="Login" class="register-link">Log in!</a></div>
            </div>
        </div>
    </div>
</body>
</html>
