@{
    Layout = null;
}


@model LoginDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    <link href="~/sb-admin-2/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center" style="margin-top: 20vh;">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4" style="color: #1488e1;">Login</h3></div>
                                <div class="card-body">
                                    <form asp-controller="Account" asp-action ="Login">
                                        <div class="form-floating mb-3">
                                            <input asp-for="UserName" class="form-control" placeholder="name@example.com" />
                                            <label asp-for="UserName"><i class="fa-solid fa-user" style="color: #74C0FC;"></i>   User Name</label>
                                            
                                                    
                                            
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                            <label asp-for="Password"><span class="fas fa-lock" style="color: #74C0FC;"></span>   Password</label>
                                            
                                            
                                           
                                        </div>
                                        
                                        <div class="d-flex align-items-center justify-content-center mt-4 mb-0">
                                            <button class="btn btn-primary" type="submit">Login</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a asp-controller="Account" asp-action="Register">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/sb-admin-2/js/scripts.js"></script>
</body>
</html>
