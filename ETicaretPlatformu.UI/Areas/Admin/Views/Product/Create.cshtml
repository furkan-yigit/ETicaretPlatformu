@using ETicaretPlatformu.Application.Models.VMs.CatagoryVM
@using ETicaretPlatformu.Application.Models.VMs.ProductVMs
@model ETicaretPlatformu.Application.Models.DTOs.ProductDTOs.AddProductDto
@{
    ViewData["Title"] = "Create";
}

<head>
    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

    <!-- jQuery Validation library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" crossorigin="anonymous"></script>
</head>


<body class="bg-primary">
    <div>
        <div>
            <main>
                <div class="container">
                    <div class="row justify-content-center" >
                        <div class="col-lg-9">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4" style="color: #1488e1;">Create</h3></div>
                                <div class="card-body">
                                    <form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
                                       
                                        

                                        <div class="form-floating mb-3">
                                            <input asp-for="Name"  class="form-control" />
                                            <label asp-for="Name" class="control-label"></label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                       
                                        <div class="form-floating mb-3">
                                            <input asp-for="Description" class="form-control" />
                                            <label asp-for="Description" class="control-label"></label>
                                            
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Price" class="form-control" />
                                            <label asp-for="Price" class="control-label"></label>
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>


                                        <div class="form-floating mb-3">
                                            <input asp-for="StockQuantity" class="form-control" />
                                            <label asp-for="StockQuantity" class="control-label"></label>
                                            <span asp-validation-for="StockQuantity" class="text-danger"></span>
                                        </div>                                        


                                        <div class="form-floating mb-3">
                                            
                                            <select asp-for="CategoryId" name="CategoryId"  class="form-control">
                                                <option value="">Kategori seçiniz</option>
                                                @foreach (CatagoryVM item in ViewBag.Kategoriler)
                                                {
                                                    <option value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                            <label asp-for="CategoryId" class="control-label"></label>
                                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="UploadPath" class="form-control" />
                                            

                                            <span asp-validation-for="UploadPath" class="text-danger"></span>
                                        </div>



                                        <div class="d-flex justify-content-between mt-4 mb-0">
                                            <div>
                                                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                                            </div>
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                            
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script>
            // Log validation error messages to the browser console
            @if (!ViewData.ModelState.IsValid)
            {
                <text>
                    console.log("Validation errors occurred:");
                    @foreach (var key in ViewData.ModelState.Keys)
                    {
                        foreach (var error in ViewData.ModelState[key].Errors)
                        {
                            <text>console.log("@error.ErrorMessage"); </text>
                        }
                    }
                </text>
            }
        </script>

      
</body>