@{
    var successMessage = TempData["Success"] as string;
}
@{
    var errorMessage = TempData["Error"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/sb-admin-2/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" asp-area="" asp-controller="Home" asp-action="Index">E-Shop Home Page</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        
        <div class="ms-auto">
            
        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i>@User.Identity.Name</a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Panel</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Edit" asp-route-userName="@User.Identity.Name">Edit</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="AdminRegister">Admin Register</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        
                        <div class="sb-sidenav-menu-heading">Menu</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-user"></i></div>
                            Users
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fab fa-product-hunt"></i></div>
                            Products
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-cart-shopping"></i></div>
                            Orders
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="fa-solid fa-tags"></i></div>
                            Category
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @User.Identity.Name
                    }
                    else
                    {
                        <p></p>
                    }
                    
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div id="notification-area">
                </div>
                @RenderBody()
                
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Omer - Sila - Ece - Yalin - Furkan</div>                        
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/js/site.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/sb-admin-2/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/sb-admin-2/assets/demo/chart-area-demo.js"></script>
    <script src="~/sb-admin-2/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <script src="~/sb-admin-2/js/datatables-simple-demo.js"></script>

    <script>
        var successMessage = '@(successMessage != null ? successMessage : "")';
        if (successMessage.trim() !== "") {
            showNotification('success', successMessage);
        }

        var errorMessage = '@(errorMessage != null ? errorMessage : "")';
        if (errorMessage.trim() !== "") {
            showNotification('error', errorMessage);
        }
    </script>
</body>
</html>
