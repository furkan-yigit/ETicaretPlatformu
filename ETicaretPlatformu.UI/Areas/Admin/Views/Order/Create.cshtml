@using ETicaretPlatformu.Application.Models.DTOs.OrderDto
@using ETicaretPlatformu.Application.Services.UserService
@using ETicaretPlatformu.Domain.Entities
@using Microsoft.AspNetCore.Identity
@model CreateOrderDto

@{
    ViewData["Title"] = "Create";
    UserManager<User> manager = ViewBag.Manager;
}

<!-- Buraya öyle bir kod yazmalıyım ki productlara göre order detail oluşturmalı, kafam basmadı :D-->
<h1>Create</h1>

<body class="bg-primary">
    <div>
        <div>
            <main>
                <div class="container">
                    <div class="row justify-content-center"> 
                        <div class="col-lg-9">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4" style="color: #1488e1;">Create</h3></div>
                                <div class="card-body">
                                    <form asp-action="Create" method="post">




                                        <div class="form-floating mb-3">
                                           
                                            <select asp-for="UserId" class="form-control">
                                                <option>Select User</option>
                                                @foreach (UserDto item in ViewBag.Users)
                                                {
                                                    User user = await manager.FindByNameAsync(@item.UserName);
                                                    <option value=@user.Id>@item.UserName</option>
                                                        }
 
                                            </select>
                                            <label asp-for="UserId" class="control-label">User</label>
                                            <span asp-validation-for="UserId" class="text-danger"></span>
                                            </div>

                                            <div class="d-flex justify-content-between mt-4 mb-0">
                                                <div>
                                                <a asp-area="Admin"  asp-action="Index" class="btn btn-secondary">Back to List</a>
                                                </div>
                                                <input type="submit" value="Create" class="btn btn-primary" />

                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    </body>