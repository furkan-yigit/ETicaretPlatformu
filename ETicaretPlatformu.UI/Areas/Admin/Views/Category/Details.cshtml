@model ETicaretPlatformu.Application.Models.DTOs.CatagoryDto.UpdateCatagoryDto

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<style>
    .details-container {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 20px;
        margin: 20px auto;
        max-width: 600px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .details-header h2 {
        margin-top: 0;
        font-size: 24px;
        color: #333;
        border-bottom: 1px solid #ccc;
        padding-bottom: 10px;
    }

    .detail-item {
        margin-bottom: 15px;
    }

    .label {
        font-weight: bold;
        color: #555;
    }

    .value {
        margin-left: 10px;
    }

    .details-footer {
        margin-top: 20px;
        text-align: right;
    }

    .btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease;
        font-weight: bold;
        display: inline-block;
        margin-left: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }
</style>

<div class="details-container animate__animated animate__fadeIn">
    <div class="details-header">
        <h2>Details</h2>
    </div>
    <div class="details-content">
        <div class="detail-section">
            <h4>Update Category Information</h4>
            <hr />
            <div class="detail-item">
                <span class="label">ID:</span>
                <span class="value">@Model.Id</span>
            </div>
            <div class="detail-item">
                <span class="label">Name:</span>
                <span class="value">@Model.Name</span>
            </div>
            <div class="detail-item">
                <span class="label">Description:</span>
                <span class="value">@Model.Description</span>
            </div>
            <div class="detail-item">
                <span class="label">Update Date:</span>
                <span class="value">@Model.UpdateDate.ToString("yyyy-MM-dd")</span>
            </div>
            <div class="detail-item">
                <span class="label">Status:</span>
                <span class="value">@Model.Status</span>
            </div>
        </div>
    </div>
    <div class="details-footer">
        
        <a href="@Url.Action("Index")" class="btn btn-secondary animate__animated animate__rubberBand">Back to List</a>
    </div>
</div>
