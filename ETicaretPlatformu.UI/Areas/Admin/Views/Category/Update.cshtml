@model ETicaretPlatformu.Application.Models.DTOs.CatagoryDto.UpdateCatagoryDto

@{
    ViewData["Title"] = "Update";
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Category</title>
    <!-- Bootstrap CSS from CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 50px;
            font-family: 'Roboto', sans-serif;
        }

        .form-container {
            max-width: 600px;
            margin: auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .back-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #007bff;
            text-decoration: none;
        }

        /* Custom CSS for a more creative design */
        .form-container {
            background-color: #f8f9fa;
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }

        .form-container h4 {
            color: #007bff;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .form-label {
            color: #007bff;
            font-weight: bold;
        }

        .form-control {
            border: 2px solid #007bff;
            border-radius: 10px;
            padding: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .back-link {
            color: #007bff;
            font-weight: bold;
            text-decoration: none;
        }

        .back-link:hover {
            color: #0056b3;
        }
    </style>
</head>
<body>
    <h1 class="text-center">Update</h1>
    <div class="container form-container">
        <h4>Update Category</h4>
        <hr />
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label for="Name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="@Model.Name" value="@Model.Name">
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description:</label>
                <input type="text" class="form-control" id="Description" name="Description" placeholder="@Model.Description" value="@Model.Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
           
            <button type="submit" class="btn btn-primary btn-block mx-auto">
                <i class="fas fa-save"></i> Save
            </button>
            
        </form>
        <a asp-action="Index" class="back-link">Back to List</a>
    </div>
    <!-- Bootstrap JS from CDN (Optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
